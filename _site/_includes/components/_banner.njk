<section class="pt-16 pb-32 bg-primary flex md:content-center justify-center flex-col">
  <div class="container mx-auto px-4 max-w-6xl">
    <a href="{{ backUrl }}" class="inline-block border-b-2 border-transparent text-white mb-20 hover:border-b-2 hover:border-white">👈 Go Back</a>
    <h1 class="font-display text-3xl md:text-7xl text-secondary">{{ title }}</h1>
