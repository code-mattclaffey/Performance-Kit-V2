<section class="pt-16 pb-32 bg-primary flex md:content-center justify-center flex-col text-white">
  <div class="container mx-auto px-4 max-w-6xl">
    <a href="{{ backUrl }}" class="inline-block border-b-2 border-transparent  mb-20 hover:border-b-2 hover:border-white">👈 Go Back</a>
    <h1 class="font-sans text-3xl md:text-7xl mb-4">{{ title }}</h1>
    <p class="font-sans font-light text-lg md:text-xl max-w-3xl  mt-6">{{ description }}</p>

    {% if cta %}
      <a href="{{ cta }}" class="font-sans font-medium bg-transparent  font-semibold py-3 px-6 border-2 border-white hover:border-secondary rounded mt-10 block md:inline-block  transition-all text-center" target="_blank">
        <span class="text-3xl align-middle">🧑🏻‍💻 </span>
        View exercise
      </a>
    {% endif %}
  </div>
</section>
